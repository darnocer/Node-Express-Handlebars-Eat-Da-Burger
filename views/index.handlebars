<h1>Read-Da-Book</h1>

<form class="new-book">
    <div class="form-group">
        <input type="text" id="user-book" name="book_name"></input>

        <button class="btn btn-warning" id="add-book" type="submit">Add to Reading List</button>
    </div>
</form>


<div>
    <h2>My Reading List</h2>
    <form id="book-read" class="button-size">
        <select name="id">
            {{#each books}}
            {{#unless wasRead}}
            <option value="{{this.id}}">{{this.book_name}}</option>
            {{/unless}}
            {{/each}}
        </select>

        <button type="submit" class="btn btn-success" id="read-btn" data-id="{{id}}" data-newread="{{wasRead}}">I read
            it</button>
        <button class="delete-btn btn btn-danger" id="delete-btn" data-id="{{this.id}}">I don't wanna read it</button>
    </form>


    <h2>My Read List</h2>
    <ul>
        {{#each books}}
        {{#if wasRead}}
        <li>
            <p> {{book_name}} </p>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>




